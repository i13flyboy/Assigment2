BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        # Left hand column
        size_hint_x: 0.3
        Label:
            id: output_label
            text: "Sort by:"
        Spinner:
            id: select_day
            values: app.list_codes
            on_text: app.change_status(self.text)
        Label:
            text: "Add New Places"
        Label:
            text: "Name:"
        TextInput:
            id: new_place
            multiline: False
            write_tab: False
        Label:
            text: "Country"
        TextInput:
            id: new_country
            multiline: False
            write_tab: False
        Label:
            text: "Priority"
        TextInput:
            id: new_priority
            multiline: False
            write_tab: False
        Button:
            on_press: app.add_new_place()
            text: "Add Place"
        Button:
            text: "Clear"
            on_press: app.handle_clear()
    BoxLayout:
        # Right hand column
        orientation: 'vertical'
        Label:
            size_hint_y: 0.2
            text: 'Places to visit'
        BoxLayout:
            orientation: 'vertical'
            id: box_list
        BoxLayout:
            orientation: 'vertical'
            id: place_buttons
        Label:
            size_hint_y: 0.1
            text: app.program_status_bar
        Label:
            id: status_visited
            size_hint_y: 0.1
            text: 'Status visited'

